<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.stage.Stage?>
<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="demo3.fitnesstracker.AddWorkoutController" spacing="10">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10" />
    </padding>
    <Label text="Exercise Details" />
    <TextField fx:id="setsField" promptText="Sets" />
    <TextField fx:id="repsField" promptText="Reps" />
    <TextField fx:id="weightField" promptText="Weight" />
    <TextField fx:id="timeField" promptText="Time" />
    <Button text="Add Exercise to Workout" onAction="#handleAddExercise" />
    <Button text="Close" onAction="#handleClose" />
</VBox>
